{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "declaration": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}