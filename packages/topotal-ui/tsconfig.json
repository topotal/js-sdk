{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "declaration": true,
  },
  "exclude": [
    "node_modules",
    "esm",
    "lib"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.config.ts"
  ]
}
